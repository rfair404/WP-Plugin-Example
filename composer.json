{
    "name": "russellfair/wp_plugin_example",
    "description": "An Example of a WordPress plugin with standards, linting, tests and CI/CD",
    "authors": [
        {
            "name": "Russell Fair",
            "email": "rfair404@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "johnpbloch/wordpress": "4.9.7",
        "wpackagist-theme/twentyseventeen": "1.6"
    },
    "extra": {
        "wordpress-install-dir": "wp",
        "installer-paths": {
            "custom-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "custom-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^6",
        "wp-coding-standards/wpcs": "^1.0",
        "squizlabs/php_codesniffer": "3.*",
        "phpmd/phpmd" : "@stable",
        "10up/wp_mock": "0.3.0",
        "behat/behat": "^3.5",
        "behat/mink": "^1.7",
        "behat/mink-goutte-driver": "^1.2",
        "behat/mink-extension": "^2.3"
    }
}
