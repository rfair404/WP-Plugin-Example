{
    "name": "russellfair/wp_plugin_example",
    "description": "An Example of a WordPress plugin with standards, linting, tests and CI/CD",
    "authors": [
        {
            "name": "Russell Fair",
            "email": "rfair404@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "johnpbloch/wordpress": "4.9.7",
        "wpackagist-theme/twentyseventeen": ""
    },
    "extra": {
        "wordpress-install-dir": "docroot",
        "installer-paths": {
            "docroot/custom-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "docroot/custom-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "squizlabs/php_codesniffer": "3.*",
        "phpmd/phpmd" : "@stable"
    }
}
